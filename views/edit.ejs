<h1>Edit profile</h1>
<form action="edit" method="POST" >

    <div>
        <label for="email">Email</label>
        <input type="text" id="email" name="email" value="<%= stats.email%>" required>
    </div>

    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%= stats.name%>" required>
    </div>

    <div>
        <label for="age">Age</label>
        <input type="text" id="age" name="age" value="<%= stats.age%>" required>
    </div>

    <div>
        <label for="address">Address</label>
        <input type="text" id="address" name="address" value="<%= stats.address%>" required>
    </div>

    <div>
        <label for="height">Height</label>
        <input type="text" id="height" name="height" value="<%= stats.height%>" required>
    </div>

    <div>
        <label for="weight">Weight</label>
        <input type="text" id="weight" name="weight" value="<%= stats.weight%>" required>
    </div>

    <div>
        <label for="phone">Contact Number</label>
        <input type="text" id="phone" name="phone" value="<%= stats.phone%>" required>
    </div>

    <button type="submit">Update</button>
    <button><a href="/stats">Cancel</a></button>

</form>